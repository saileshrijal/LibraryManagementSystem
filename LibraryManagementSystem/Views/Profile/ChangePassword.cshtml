@model ChangePasswordVm

@{
    ViewData["Title"] = "Change Password";
}

<div class="container-fluid px-4 py-4">
    <form asp-action="ChangePassword" method="post" enctype="multipart/form-data">
        <div class="card shadow-lg">
            <div class="card-header">
                <h4 class="card-title">Change Password</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3 form-floating">
                            <input type="text" class="form-control" id="EmployeeId" placeholder="EmployeeId"
                                asp-for="EmployeeId" disabled>
                            <label for="FirstName">Employee Id</label>
                            <span class="text-danger" asp-validation-for="EmployeeId"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3 form-floating">
                            <input type="text" class="form-control" id="FullName" placeholder="FullName"
                                asp-for="FullName" disabled>
                            <label for="FullName">Full Name</label>
                            <span class="text-danger" asp-validation-for="FullName"></span>
                        </div>
                    </div>
                     <div class="col-md-6">
                        <div class="mb-3 form-floating">
                            <input type="text" class="form-control" id="UserName" placeholder="UserName"
                                asp-for="UserName" disabled>
                            <label for="UserName">UserName</label>
                            <span class="text-danger" asp-validation-for="UserName"></span>
                        </div>
                    </div>
                     <div class="col-md-6">
                        <div class="mb-3 form-floating">
                            <input type="email" class="form-control" id="Email" placeholder="Email"
                                asp-for="Email" disabled>
                            <label for="Email">Full Name</label>
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3 form-floating">
                            <input type="password" class="form-control" id="OldPassword" placeholder="OldPassword"
                                asp-for="OldPassword">
                            <label for="OldPassword">Old Password</label>
                            <span class="text-danger" asp-validation-for="OldPassword"></span>
                        </div>
                    </div>
                     <div class="col-md-6">
                        <div class="mb-3 form-floating">
                            <input type="password" class="form-control" id="NewPassword" placeholder="NewPassword"
                                asp-for="NewPassword">
                            <label for="NewPassword">New Password</label>
                            <span class="text-danger" asp-validation-for="NewPassword"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3 form-floating">
                            <input type="password" class="form-control" id="ConfirmPassword" placeholder="ConfirmPassword"
                                asp-for="ConfirmPassword">
                            <label for="FullName">Confirm Password</label>
                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary"><i class="fas fa-file"></i> Save</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}