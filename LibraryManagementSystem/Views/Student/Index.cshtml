@model List<StudentVm>

@{
    ViewData["Title"] = "Students";
}

<div class="container-fluid px-4 py-4">
    <div class="card shadow-lg">
        <div class="card-header">
            <div class="row">
                <div class="col-6">
                    <h4 class="card-title">List of Students</h4>
                </div>
                <div class="col-6 float-end">
                    <a asp-action="Create" class="btn btn-dark float-end"><i class="fas fa-plus-circle"></i></a>
                </div>
            </div>

        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Image</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Grade</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int sn = 0;
                    }
                    @foreach (var student in Model)
                    {
                        var imageUrl = string.IsNullOrEmpty(student.ImageUrl) ? "/defaultImage/avatar.png" :
                        $"/uploads/student/{student.ImageUrl}";
                        <tr>
                            <td>@(++sn)</td>
                            <td>
                                <a href="@imageUrl" target="_blank">
                                    <img src="@imageUrl" width="30" height="30"
                                        class="shadow-sm rounded-circle border border-primary" />
                                </a>
                            </td>
                            <td>@student.FirstName</td>
                            <td>@student.LastName</td>
                            <td>@student.Grade</td>
                            <td>@student.PhoneNumber</td>
                            <td>@student.Email</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-primary" ><i class="fas fa-edit"></i></a>
                                <form asp-action="Delete" asp-route-id="@student.Id" class="d-inline">
                                    <button class="btn btn-sm btn-danger deleteBtn"><i class="fas fa-trash"></i>
                                    </button>
                                </form>
                                <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-sm btn-info"><i
                                        class="fa fa-hamburger"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts{

    <script>
        $(document).ready(function () {
            $(".deleteBtn").click(function (e) {
                e.preventDefault();
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        this.form.submit();
                        Swal.fire(
                            'Deleted!',
                            'Your file has been deleted.',
                            'success'
                        )
                    }
                })
            });
        });
    </script>


}