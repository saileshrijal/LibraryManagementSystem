@model List<BookIssueHistoryVm>

@{
    ViewData["Title"] = "Book Issue History";
}

<div class="container-fluid px-4 py-4">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6">
                    <h4 class="card-title">Book Issue History</h4>
                </div>
                <div class="col-6 float-end">
                    <a asp-action="Create" class="btn btn-dark float-end"><i class="fas fa-plus-circle"></i></a>
                </div>
            </div>

        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Book Issue Id</th>
                        <th>Message</th>
                        <th>Created Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.Id</td>
                            <td>@item.BookIssueId</td>
                            <td>@item.Message</td>
                            <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.BookIssueId" class="btn btn-sm btn-info"><i
                                        class="fa fa-hamburger"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts{

    @* open modal on delete button click *@
    <script>
        $(document).ready(function () {
            $(".deleteBtn").click(function (e) {
                e.preventDefault();
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        this.form.submit();
                        Swal.fire(
                            'Deleted!',
                            'Your file has been deleted.',
                            'success'
                        )
                    }
                })
            });
        });
    </script>


}