@model List<BookIssueVm>

@{
    ViewData["Title"] = "Book Issue";
}

<div class="container-fluid px-4 py-4">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6">
                    <h4 class="card-title">List of Book Issue</h4>
                </div>
                <div class="col-6 float-end">
                    <a asp-action="Create" class="btn btn-dark float-end"><i class="fas fa-plus-circle"></i></a>
                </div>
            </div>

        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Issue Date</th>
                        <th>Student Name</th>
                        <th>Book</th>
                        <th>Publication</th>
                        <th>Return Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.Id</td>
                            <td>@item.IssueDate.ToString("dd/MM/yyyy")</td>
                            <td>@item.StudentName</td>
                            <td>@item.Book</td>
                            <td>@item.Publication</td>
                            <td>@item.ReturnDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i
                                        class="fas fa-edit"></i> </a>
                                <form asp-action="Delete" asp-route-id="@item.Id" class="d-inline">
                                    <button class="btn btn-sm btn-danger deleteBtn"><i class="fas fa-trash"></i>
                                    </button>

                                </form>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i
                                        class="fa fa-hamburger"></i></a>
                                <a asp-action="ReturnBook" asp-route-id="@item.Id" class="btn btn-sm btn-success"><i
                                        class="fas fa-refresh"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts{

    @* open modal on delete button click *@
    <script>
        $(document).ready(function () {
            $(".deleteBtn").click(function (e) {
                e.preventDefault();
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        this.form.submit();
                        Swal.fire(
                            'Deleted!',
                            'Your file has been deleted.',
                            'success'
                        )
                    }
                })
            });
        });
    </script>


}