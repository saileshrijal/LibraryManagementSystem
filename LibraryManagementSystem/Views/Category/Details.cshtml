@model CategoryDetailsVm

@{
    ViewBag.Title = "Category Details";
}

<div class="container-fluid px-4 py-4">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Category Details</h3>
        </div>
        <div class="card-body">
            <table class="table table-dark table-bordered table-striped table-hover">
                <tr>
                    <th>Id</th>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>@Model.Description</td>
                </tr>
                <tr>
                    <th>Created Date</th>
                    <td>@Model.CreatedDate.ToString("dd/MM/yyyy")</td>
                </tr>
                <tr>
                    <th>Modified Date</th>
                    <td>@Model.ModifiedDate.ToString("dd/MM/yyyy")</td>
                </tr>
                 <tr>
                    <th>Created By</th>
                    <td>@Model.CreatedBy</td>
                </tr>
                <tr>
                    <th>Modified By</th>
                    <td>@Model.ModifiedBy</td>
                </tr>
            </table>
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back</a>
        </div>
    </div>
</div>


